<Window x:Class="PingPong.MainWindow" Background="Aquamarine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingPong"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Arial" FontSize="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Label FontSize="25" FontWeight="Bold" FontFamily="Arial" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Margin="6 2 6 0" VerticalAlignment="Top"  Background="CadetBlue" BorderBrush="DarkSlateGray" BorderThickness="3">Asztalitenisz ranglista</Label>
        <Border Grid.Column="0" Grid.Row="1" Grid.RowSpan="4" Background="CadetBlue" BorderBrush="DarkSlateGray" BorderThickness="3" Margin="5 50 0 5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Játékosok" HorizontalAlignment="Center" FontWeight="Bold" Margin="5 5 5 5"></Label>
                <Button x:Name="ListPlayers" Grid.Row="1" Height="30" Background="LightBlue" BorderBrush="DarkSlateGray" BorderThickness="2" MaxWidth="300" Margin="5 5 5 5" >Kilistázás</Button>
                <Button x:Name="AddPlayers" Grid.Row="2" Height="30" Background="LightBlue" BorderBrush="DarkSlateGray" BorderThickness="2" MaxWidth="300" Margin="5 5 5 5" >Felvétel</Button>
                <Button x:Name="EditPlayers" Grid.Row="3" Height="30" Background="LightBlue" BorderBrush="DarkSlateGray" BorderThickness="2" MaxWidth="300" Margin="5 5 5 5" >Szerkesztés</Button>
                <Button x:Name="DeletePlayers" Grid.Row="4" Height="30" Background="LightBlue" BorderBrush="DarkSlateGray" BorderThickness="2" MaxWidth="300" Margin="5 5 5 5" >Törlés</Button>
                <Label Grid.Row="5" Content="Meccsek" HorizontalAlignment="Center" FontWeight="Bold" Margin="5 5 5 5"></Label>
                <Button x:Name="AddMatch" Grid.Row="6" Height="30" Background="LightBlue" BorderBrush="DarkSlateGray" BorderThickness="2" MaxWidth="300" Margin="5 5 5 5" >Tervezés</Button>
            </Grid>
        </Border>
        <Border x:Name="Display" Grid.Column="1" Grid.Row="0" BorderBrush="DarkSlateGray" BorderThickness="3" Margin="5 50 5 5" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Label x:Name="DisplayTitle" Grid.Row="0" FontWeight="Bold" HorizontalAlignment="Center">Placeholder</Label>
                <Grid  x:Name="gridList" Visibility="Hidden" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>

                    </Grid.RowDefinitions>
                    <ListBox x:Name="lbList" Background="CadetBlue" BorderBrush="DarkSlateGray" Grid.Row="0" Height="330"   ScrollViewer.CanContentScroll="True" Margin="5 5 5 5"/>

                </Grid>
                <Grid x:Name="gridAdd" Visibility="Hidden" Grid.Row="1" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="10 10 10 10">
                        <StackPanel Orientation="Horizontal" Margin="0 5 0 5">
                            <Label Content="Név:" Width="100" VerticalAlignment="Center"/>
                            <TextBox x:Name="tbName" Width="200"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 5 0 5">
                            <Label Content="Rank:" Width="100" VerticalAlignment="Center"/>
                            <TextBox x:Name="tbRank" Width="200"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 5 0 5" >
                            <Label Content="Értékelés:" Width="100" VerticalAlignment="Center"/>
                            <TextBox x:Name="tbSkill" Width="200"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 5 0 5" >
                            <Label Content="Leírás:" Width="100" VerticalAlignment="Center"/>
                            <TextBox x:Name="tbDesc" Width="200"/>
                        </StackPanel>

                        <Button x:Name="btnSubmit" Content="Hozzáadás" Width="150" Margin="0 10 0 0" HorizontalAlignment="Center" Background="LightBlue" BorderBrush="DarkSlateGray" BorderThickness="2"/>

                    </StackPanel>
                </Grid>
                <Grid x:Name="gridDelete" Visibility="Hidden" Grid.Row="1" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="10 10 10 10">
                        <StackPanel Orientation="Horizontal" Margin="0 5 0 5">
                            <Label Content="Név:" Width="100" VerticalAlignment="Center"/>
                            <TextBox x:Name="tbDeleteName" Width="200"/>
                        </StackPanel>

                        <Button x:Name="btnDeleteSubmit" Content="Törlés" Width="150" Margin="0 10 0 0" HorizontalAlignment="Center" Background="LightBlue" BorderBrush="DarkSlateGray" BorderThickness="2"/>

                    </StackPanel>
                </Grid>
                <Grid x:Name="gridPlan" Visibility="Hidden" Grid.Row="1" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>

                    </Grid.RowDefinitions>
                    <ComboBox x:Name="cbPlayer1" Width="200" Margin="0 10 0 10" Grid.Row="0" Height="40" />
                    <Label Grid.Row="1" Content="VS" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="25"/>
                    <ComboBox x:Name="cbPlayer2" Width="200" Margin="0 10 0 10" Grid.Row="2" Height="40" />
                    <Label Grid.Row="3" Content="Best Of" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="0 0 0 10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="4">
                        <RadioButton x:Name="rbBestOf1" Content="1" GroupName="BestOf" IsChecked="True" HorizontalAlignment="Center" Margin="0 0 0 5"/>
                        <RadioButton x:Name="rbBestOf3" Content="3" GroupName="BestOf" IsChecked="True" HorizontalAlignment="Center" Margin="0 0 0 5"/>
                        <RadioButton x:Name="rbBestOf5" Content="5" GroupName="BestOf" HorizontalAlignment="Center" Margin="0 0 0 10"/>
                    </StackPanel>
                    <Button x:Name="btnPlanMatch" Content="Meccs tervezése" Width="175" Margin="0 0 0 0" Grid.Row="5" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Background="LightBlue" BorderBrush="DarkSlateGray" BorderThickness="2"/>

                </Grid>
            </Grid>
        </Border>

    </Grid>
</Window>
